<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.gui.DodajSamochodController"> <children>
    <Label text="Model:" />
    <TextField fx:id="modelTextField" /> <Label text="Numer rejestracyjny:" />
    <TextField fx:id="registrationTextField" /> <Label text="Waga (kg):" />
    <TextField fx:id="weightTextField" /> <Label text="Prędkość maksymalna (km/h):" />
    <TextField fx:id="speedTextField" /> <Label text="Wybierz silnik:" />
    <ComboBox fx:id="engineComboBox" maxWidth="Infinity" promptText="Dostępne silniki..." />

    <Label text="Wybierz skrzynię biegów:" />
    <ComboBox fx:id="gearboxComboBox" maxWidth="Infinity" promptText="Dostępne skrzynie..." />

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButton" text="Anuluj" />
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirmButton" text="Zatwierdź" />
        </children>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </HBox>
</children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>